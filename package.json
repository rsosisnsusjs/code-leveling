{
  "name": "codeleveling",
  "displayName": "Code Leveling",
  "description": "Level up as you code!",
  "publisher": "rsosisnsusjs",
  "version": "1.1.3",
  "engines": {
    "vscode": "^1.100.0"
  },
  "icon": "image/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:python",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeleveling.showDailyQuests",
        "title": "Show Daily Quests"
      },
      {
        "command": "codeleveling.start",
        "title": "Start Code Leveling"
      },
      {
        "command": "codeleveling.reset",
        "title": "Reset XP"
      },
      {
        "command": "code-leveling.refreshQuests",
        "title": "Refresh Daily Quests"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "questTree",
          "name": "Daily Quests"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rsosisnsusjs/code-leveling"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}